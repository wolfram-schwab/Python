<?xml version="1.0"?>
<rezept>
   <titel>Apfelkuchen mit Mandelsplittern</titel>

   <bild quelle="./images/apfelkuchen.jpg">Apfelkuchen</bild>

   <zutaten>
      <zutat>
         <bezeichnung>Äpfel</bezeichnung>
         <menge>
            <anzahl>1</anzahl>
            <einheit>kg</einheit>
         </menge>
      </zutat>
      <zutat>
         <bezeichnung>Wasser 
            <eigenschaft>kalt</eigenschaft>
         </bezeichnung>
         <menge>
            <anzahl>5</anzahl>
            <einheit>EL</einheit>
         </menge>
      </zutat>
      <zutat>
         <bezeichnung>Zitronensaft</bezeichnung>
         <menge>
            <anzahl>1</anzahl>
            <einheit>TL</einheit>
         </menge>
      </zutat>
      <zutat>
         <bezeichnung>Butter</bezeichnung>
         <menge>
            <anzahl>150</anzahl>
            <einheit>g</einheit>
         </menge>
      </zutat>
      <zutat>
         <bezeichnung>Zucker</bezeichnung>
         <menge>
            <anzahl>200</anzahl>
            <einheit>g</einheit>
         </menge>
      </zutat>
      <zutat>
         <bezeichnung>Vanillepulver
            <eigenschaft>ungesüßt</eigenschaft>
         </bezeichnung>
         <menge>
            <anzahl>1</anzahl>
            <einheit>TL</einheit>
         </menge>
      </zutat>
      <zutat>
         <bezeichnung>Zitronenschale</bezeichnung>
         <menge>
            <anzahl>0.25</anzahl>
            <einheit>TL</einheit>
         </menge>
      </zutat>
      <zutat>
         <bezeichnung>Salz</bezeichnung>
      </zutat>
      <zutat>
         <bezeichnung>Eier</bezeichnung>
         <menge>
            <anzahl>3</anzahl>
         </menge>
      </zutat>
      <zutat>
         <bezeichnung>Mehl</bezeichnung>
         <menge>
            <anzahl>280</anzahl>
            <einheit>g</einheit>
         </menge>
      </zutat>
      <zutat>
         <bezeichnung>Backpulver</bezeichnung>
         <menge>
            <anzahl>1</anzahl>
            <einheit>TL</einheit>
         </menge>
      </zutat>
      <zutat>
         <bezeichnung>Milch</bezeichnung>
         <menge>
            <anzahl>8</anzahl>
            <einheit>cl</einheit>
         </menge>
      </zutat>
      <zutat>
         <bezeichnung>Mandelsplitter</bezeichnung>
         <menge>
            <anzahl>30</anzahl>
            <einheit>g</einheit>
         </menge>
      </zutat>
      <zutat>
         <bezeichnung>Puderzucker</bezeichnung>
         <menge>
            <anzahl>20</anzahl>
            <einheit>g</einheit>
         </menge>
      </zutat>
   </zutaten>

   <statistik>
